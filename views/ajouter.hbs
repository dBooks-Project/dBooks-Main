<div class="container-fluid ajout" id="ajout">
    <div class="row justify-content-center">
        <div class="col-10 com-sm-10 col-md-8 col-lg-5 col-xl-5">
            <div class="creation">
                <h1 class="ajout-text display-1">Ajouter un livre</h1>
                <hr>
                <form method="GET">
                    <div class="form-group row">
                        <label for="titre" class="col-12 col-form-label">Titre <span class="fa fa-book"></span></label>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <input class="form-control" type="text" placeholder="Titre" id="titre">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="auteur" class="col-12 col-form-label">Auteur <span class="fa fa-id-card"></span></label>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <input class="form-control" type="text" placeholder="Prénom" id="prenom">
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-12">
                            <input class="form-control" type="text" placeholder="Nom" id="nom">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="anneeParution" class="col-12 col-form-label">Année de parution <span class="fa fa-calendar"></span></label>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <input class="form-control" type="text" placeholder="Année de parution" id="anneeParution">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="langue" class="col-12 col-form-label">Langue <span class="fa fa-language"></span></label>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <select class="form-control" id="langue">
                            <option>Français</option>
                            <option>Anglais</option>
                            <option>Espagnol</option>
                            <option>Japonais</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="genreLitteraire" class="col-12 col-form-label">Genre littéraire <span class="fa fa-pencil"></span></label>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <select class="form-control" id="genreLitteraire">
                            <option>Roman</option>
                            <option>Poésie</option>
                            <option>Théâtre</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="theme" class="col-12 col-form-label">Thème <span class="fa fa-th-large"></span></label>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <input class="form-control" type="text" data-role="tagsinput" value="" placeholder="Tags" id="tags">
                        </div>
                    </div>

                    <div class="row text-center remember-flex">
                        <button type="submit" class="envoyer-bouton">Ajouter</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>