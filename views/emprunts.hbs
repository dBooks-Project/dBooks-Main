<div class="container-fluid emprunts">
    <div class="emprunts-container">
        <div class="row no-gutters">
            <main class="col-12">
                <div class="emprunts-text clearfix">
                    <h1>Emprunts</h1>
                </div>
            </main>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="text">
                    {{#if results.nombre1}}
                    <p>Nombre d'emprunts Daphné: {{results.nombre1.Nombre1}}</p>   
                    <p>Nombre d'emprunts Julien: {{results.nombre2.Nombre2}}</p>
                    {{/if}}  
                </div>
            </div>
        </div>
        <div class="row">
            <div class="table-responsive">
                <table class="table table-bordered text">
                    <thead>
                        <tr>
                            <th>Titre</th>
                            <th>Date d'emprunt</th>
                            <th>Date de retour prévue</th>
                            <th>Date de retour</th>
                            <th>Durée</th>
                            <th>Nom utilisateur</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each results.emprunts}}
                        <tr>
                            <th scope="row">{{Titre}}</th>
                            <td>{{DateEmprunt}}</td>
                            <td>{{DateRetourPrevue}}</td>
                            <td>{{DateRetour}}</td>
                            <td>{{Duree}} jours</td>
                            <td>{{NomUtilisateur}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>